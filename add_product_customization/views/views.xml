<odoo>
    <record id="custom_product_product_tree_view" model="ir.ui.view">
        <field name="name">custom.product.product.tree.view</field>
        <field name="model">product.product</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Product Variants" multi_edit="1" duplicate="false" create="0">
                <field name="default_code" optional="show" readonly="1"/>
                <field name="barcode" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="product_template_attribute_value_ids" widget="many2many_tags"
                       groups="product.group_product_variant" readonly="1" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                <field name="lst_price" optional="show" string="Sales Price"/>
                <!--                JIQ-->
                <field name="main_id" optional="hide"/>
                <field name="minimum_price" optional="hide"/>
                <field name="maximum_price" optional="hide"/>
                <field name="average_price" optional="hide" groups="sales_team.group_sale_manager"/>
                <field name="unreserved_qty" optional="hide"/>
                <field name="market_price" optional="hide"/>
                <field name="parent_categ_id" optional="hide"/>
                <field name="brand_id" optional="hide"/>
                <field name="maker_id" optional="hide"/>
                <field name="model_id" optional="hide"/>
                <field name="manufacturer_id" optional="hide"/>
                <field name="incoming_qty" optional="hide"/>
                <field name="outgoing_qty" optional="hide"/>
                <field name="sku" optional="hide"/>
                <field name="code" optional="hide"/>
                <!--                JIQ-->
                <field name="standard_price" optional="show" readonly="1" groups="sales_team.group_sale_manager"/>
                <field name="categ_id" optional="hide"/>
                <field name="type" optional="hide" readonly="1"/>
                <field name="price" invisible="not context.get('pricelist',False)"/>
                <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom"
                       optional="show" readonly="1"/>
                <field name="product_tmpl_id" invisible="1" readonly="1"/>
                <field name="active" invisible="1"/>
                <button name="add_product_to_cart" string="Add" type="object" class="btn-primary"/>
            </tree>
        </field>
    </record>
    <record id="action_view_product_tree" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="view_id" ref="add_product_customization.custom_product_product_tree_view"/>
        <field name="search_view_id" ref="product.product_search_form_view"/>
        <field name="target">new</field>
    </record>
    <record id="inherit_view_order_form_view" model="ir.ui.view">
        <field name="name">inherit_view.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="order_line" position="before">
                <button name="%(action_view_product_tree)d" string="Select product" type="action" class="oe_highlight"
                        context="{'flag_order':'so'}"/>
            </field>
        </field>
    </record>
    <record id="sr_purchase_order_form_inherit_add_multi_product_selection_button" model="ir.ui.view">
        <field name="name">sr_purchase.order.form.inherit.add.multi.product.selection.button</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="order_line" position="before">
                <button name="%(action_view_product_tree)d" string="Select product" type="action" class="oe_highlight"
                        context="{'flag_order':'po'}"/>
            </field>
        </field>
    </record>
</odoo>